<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip"
    android:layout_margin="5dp">

    <!--  ListRow Left sied Thumbnail image -->
    <LinearLayout android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip">

        <TextView
            android:id="@+id/Round_title"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="2"
            android:fontFamily="sans-serif"
            android:text="M"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textColor="@color/MyListViewTextCircle_color"
            android:background="@drawable/circle"
            android:gravity="center"
            android:textStyle="bold"
            />

    </LinearLayout>

    <!-- Name-->
    <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:drawableLeft="@drawable/person"
        android:text=" Name"
        android:textColor="@color/MyListViewText_color"
        android:textSize="18dp"
        android:typeface="sans" />

    <!-- Father Name -->
    <TextView
        android:id="@+id/Father"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Name"
        android:textSize="16dp"
        android:layout_marginTop="3dip"
        android:layout_toRightOf="@+id/thumbnail"
        android:drawableLeft="@drawable/father"
        android:text=" Father"
        android:textColor="@color/MyListViewText_color"/>

    <!-- Surname Name -->
    <TextView
        android:id="@+id/Verified"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Father"
        android:textSize="15dp"
        android:layout_marginTop="5dip"
        android:layout_toRightOf="@+id/thumbnail"
        android:drawableLeft="@drawable/surname"
        android:text=" Surname"
        android:textColor="@color/MyListViewText_color"/>

    <!-- Mobile Name -->
    <TextView
        android:id="@+id/Mobile"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Verified"
        android:textSize="14dp"
        android:layout_marginTop="5dip"
        android:layout_toRightOf="@+id/thumbnail"
        android:drawableLeft="@drawable/mobile"
        android:text=" Mobile"
        android:textColor="@color/MyListViewText_color"/>

    <!-- City-->
    <TextView
        android:id="@+id/City"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Mobile"
        android:textSize="14dp"
        android:layout_marginTop="5dip"
        android:layout_toRightOf="@+id/thumbnail"
        android:drawableLeft="@drawable/city"
        android:text=" City"
        android:textColor="@color/MyListViewText_color"/>




</RelativeLayout>