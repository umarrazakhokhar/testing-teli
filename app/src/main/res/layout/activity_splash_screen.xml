<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="in.blogspot.ayazsofttech.muslim_teli_contact_book.SplashScreen">

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="40dp">

        <TextView
            android:id="@+id/muslim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Muslim Teli 153"
            android:padding="1dp"
            android:textColor="@color/Mybackground_color"
            android:fontFamily="sans-serif-black"
            android:textSize="70dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/muslim2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="मुस्लिम तेली 153"
            android:padding="1dp"
            android:textColor="@color/Mybackground_color"
            android:fontFamily="sans-serif-black"
            android:textSize="40dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/muslim"
            />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:indeterminate="false"
            android:indeterminateTint="@android:color/holo_orange_dark"
            tools:ignore="MissingConstraints" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/muslim"
                android:text="Contact Book"
                android:textColor="@color/Mybackground_color"
                android:fontFamily="sans-serif-black"
                android:textSize="40dp"
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="true"/>



    </LinearLayout>

</RelativeLayout>
